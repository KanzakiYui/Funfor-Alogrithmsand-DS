{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "cleanup-build",
            "command": "rm -rf dist/* && tsc --build tsconfig.json",
            "group": "build",
        }
    ]
}